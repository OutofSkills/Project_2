@model IEnumerable<RentC.UI.Models.Reservations>

@{
    ViewBag.Title = "Reservations List";
}

<h2>Reservations List</h2>

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Car Plate", "ListRents", new { sortOrder = ViewBag.PlateSortParm })
        </th>
        <th>
            @Html.ActionLink("Client Name", "ListRents", new { sortOrder = ViewBag.rNameSortParm })
        </th>
        <th>
            @Html.ActionLink("Start Date", "ListRents", new { sortOrder = ViewBag.sDateSortParm })
        </th>
        <th>
            @Html.ActionLink("End Date", "ListRents", new { sortOrder = ViewBag.eDateSortParm })
        </th>
        <th>
            @Html.ActionLink("Location", "ListRents", new { sortOrder = ViewBag.rLocationSortParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReservationStatuses.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Cars.Plate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Customers.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.StartDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EndDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Location)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ReservationStatuses.Name)
    </td>
    <td>
        @Html.ActionLink("Details", "Details", new { id = item.ReservationID })
    </td>
</tr>
}

</table>
